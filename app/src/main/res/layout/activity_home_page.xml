<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:roundiv="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/bgcolor">

    <!--头开始了-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@color/themeColor">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="2"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:src="@drawable/scan" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:textSize="12sp"
                android:text="扫一扫"/>
        </LinearLayout>
        <EditText
            android:id="@+id/homeSearchBar"
            android:drawableLeft="@drawable/search_icon"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="8"
            android:drawablePadding="6dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:hint="@string/homeSearchBarHint"
            android:textCursorDrawable="@drawable/color_cursor"
            android:background="@drawable/head_edit_text"
            android:maxLines="1"
            android:inputType="text"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_weight="2"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:src="@drawable/qr_code" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:textSize="12sp"
                android:text="会员码"/>
        </LinearLayout>
    </LinearLayout>
    <!--头结束了-->

    <!--主体内容开始了-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--轮播图片开始了-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="220dp">
                <com.youth.banner.Banner
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/homePageSlide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:image_scale_type="center_crop" />
            </LinearLayout>
            <!--轮播图片结束了-->

            <!--八按钮开始了-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/btn_home_parking"
                    android:src="@drawable/parking_button"
                    style="@style/homePageButton"/>
                <ImageButton
                    android:id="@+id/btn_home_dining"
                    android:src="@drawable/restaurant_button"
                    style="@style/homePageButton" />
                <ImageButton
                    android:id="@+id/btn_home_cinema"
                    android:src="@drawable/movie_button"
                    style="@style/homePageButton"/>
                <ImageButton
                    android:id="@+id/btn_home_child"
                    android:src="@drawable/child_button"
                    style="@style/homePageButton"/>
                <ImageButton
                    android:src="@drawable/money_button"
                    style="@style/homePageButton"/>
            </LinearLayout>
            <!--八按钮结束了-->

            <!--商品开始-->
            <!--一行商品开始了-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!--左-->
                <LinearLayout
                    style="@style/GoodLinearLayoutL">
                    <frontend.shoppingmall.CustomRoundAngleImageView
                        style="@style/GoodImageView"
                        roundiv:left_top_radius="10dp"
                        roundiv:right_top_radius="10dp"
                        android:src="@drawable/g_001" />
                    <TextView
                        style="@style/GoodTextView"
                        android:text="@string/g_001" />
                </LinearLayout>
                <!--左右商品的分割线-->
                <LinearLayout
                    style="@style/GoodLinearLayoutR">
                    <frontend.shoppingmall.CustomRoundAngleImageView
                        style="@style/GoodImageView"
                        roundiv:left_top_radius="10dp"
                        roundiv:right_top_radius="10dp"
                        android:src="@drawable/g_002"/>
                    <TextView
                        style="@style/GoodTextView"
                        android:text="@string/g_002" />
                </LinearLayout>
                <!--右-->
            </LinearLayout>
            <!--一行商品结束了-->
            <!--一行商品开始了-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!--左-->
                <LinearLayout
                    style="@style/GoodLinearLayoutL">
                    <frontend.shoppingmall.CustomRoundAngleImageView
                        style="@style/GoodImageView"
                        roundiv:left_top_radius="10dp"
                        roundiv:right_top_radius="10dp"
                        android:src="@drawable/g_003"/>
                    <TextView
                        style="@style/GoodTextView"
                        android:text="@string/g_003" />
                </LinearLayout>
                <!--左右商品的分割线-->
                <LinearLayout
                    style="@style/GoodLinearLayoutR">
                    <frontend.shoppingmall.CustomRoundAngleImageView
                        style="@style/GoodImageView"
                        roundiv:left_top_radius="10dp"
                        roundiv:right_top_radius="10dp"
                        android:src="@drawable/g_004"/>
                    <TextView
                        style="@style/GoodTextView"
                        android:text="@string/g_004" />
                </LinearLayout>
                <!--右-->
            </LinearLayout>
            <!--一行商品结束了-->
            <!--一行商品开始了-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!--左-->
                <LinearLayout
                    style="@style/GoodLinearLayoutL">
                    <frontend.shoppingmall.CustomRoundAngleImageView
                        style="@style/GoodImageView"
                        roundiv:left_top_radius="10dp"
                        roundiv:right_top_radius="10dp"
                        android:src="@drawable/g_005"/>
                    <TextView
                        style="@style/GoodTextView"
                        android:text="@string/g_005" />
                </LinearLayout>
                <!--左右商品的分割线-->
                <LinearLayout
                    style="@style/GoodLinearLayoutR">
                    <frontend.shoppingmall.CustomRoundAngleImageView
                        style="@style/GoodImageView"
                        roundiv:left_top_radius="10dp"
                        roundiv:right_top_radius="10dp"
                        android:src="@drawable/g_006"/>
                    <TextView
                        style="@style/GoodTextView"
                        android:text="@string/g_006" />
                </LinearLayout>
                <!--右-->
            </LinearLayout>
            <!--一行商品结束了-->
            <!--商品结束-->

        </LinearLayout>
    </ScrollView>
    <!--主体内容结束了-->

    <!--底部内容开始了-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@color/bottomBar">
        <ImageButton
            android:src="@drawable/home_on_press"
            style="@style/bottomBarButton"/>
        <ImageButton
            android:id="@+id/homeToShop"
            android:src="@drawable/shop_normal"
            style="@style/bottomBarButton"/>
        <ImageButton
            android:id="@+id/homeToMessage"
            android:src="@drawable/message_normal"
            style="@style/bottomBarButton"/>
        <ImageButton
            android:id="@+id/homeToSelf"
            android:src="@drawable/self_normal"
            style="@style/bottomBarButton"/>
    </LinearLayout>
    <!--底部内容结束了-->

</LinearLayout>