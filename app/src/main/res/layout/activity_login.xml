<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/head_pic"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical">
        <EditText
            android:id="@+id/logInUser"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="15dp"
            android:drawableLeft="@drawable/icon_user"
            android:maxLines="1"
            android:hint="用户名"
            android:drawablePadding="6dp"
            android:paddingStart="5dp"
            android:textCursorDrawable="@drawable/login_cursor"
            android:background="@drawable/bg_username"
            android:inputType="text"/>
        <EditText
            android:id="@+id/logInPassword"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="15dp"
            android:drawablePadding="6dp"
            android:drawableLeft="@drawable/icon_password"
            android:maxLines="1"
            android:hint="密码"
            android:paddingStart="5dp"
            android:textCursorDrawable="@drawable/login_cursor"
            android:background="@drawable/bg_username"
            android:inputType="textPassword"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textSize="17sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="注册"/>
            <TextView
                android:textSize="17sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="right"
                android:text="忘记密码"
                android:layout_gravity="right"/>
        </LinearLayout>
        <Button
            android:id="@+id/login_btn_login"
            android:background="@drawable/bg_cinema_btn"
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="20sp"/>
        <TextView
            android:layout_marginTop="55dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="---第三方登录---"
            android:textColor="@color/colorPrimary"
            android:textSize="19sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/icon_qq3"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/icon_wechat2"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/icon_github2"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/icon_weibo"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>