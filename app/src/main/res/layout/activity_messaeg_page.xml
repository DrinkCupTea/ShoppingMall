<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:roundiv="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/bgcolor">

    <!--头开始-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/themeColor">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/message"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_margin="2dp"
            android:textColor="@color/white"/>
    </LinearLayout>
    <!--头结束-->

    <!--内容开始-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">
        <ListView
            android:id="@+id/messageListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/good_bar_layout"
            android:layout_margin="15dp">
        </ListView>
    </LinearLayout>

    <!--内容结束-->

    <!--底开始-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@color/bottomBar">
        <ImageButton
            android:id="@+id/messageToHome"
            android:src="@drawable/home_normal"
            style="@style/bottomBarButton"/>
        <ImageButton
            android:id="@+id/messageToShop"
            android:src="@drawable/shop_normal"
            style="@style/bottomBarButton"/>
        <ImageButton
            android:src="@drawable/message_on_press"
            style="@style/bottomBarButton"/>
        <ImageButton
            android:id="@+id/messageToSelf"
            android:src="@drawable/self_normal"
            style="@style/bottomBarButton"/>
    </LinearLayout>
    <!--底结束-->
</LinearLayout>